extends layout

block content
  .registerForm
    input.username(type="text" placeholder='Username')
    input.firstname(type="text" placeholder='First name')
    input.lastname(type="text" placeholder='Last name')
    input.email(type="text" placeholder='Email')
    input.password(type='password' placeholder='Password')
    input.passwordCheck(type='password' placeholder='Password confirmation')
    button.register= "Register!"
    a.closeRegisterForm(style="margin-left:20px")= "Cancel"

  div.filter
    span= "Live-Code"
  div.hero#editor.banner= randomDoc.content
  div.hero
  div
    div.fl= "Connect"
    div.fl= "Hack"
    div.fl= "Chat"

  script(src="https://cdn.socket.io/socket.io-1.4.5.js")
  script(src="javascripts/index.js")
  script(src="/plugins/ace-builds-master/src/ace.js")

    