
extends layout
block content
  .contributorForm= "Contributors:"
    ol.contributors
    a.closeContributorForm(style="margin-left: 20px")= "Close"


  a.button(href="/livecode/new")= "New Document"
  table.u-full-width
    thead
      th= "Name"
      th= "Owner"
      th= "Language"
      th= "Date Created"
      th= "Last Updated"
      th= ""
    tbody
      each val in docs
        tr.document(data-live-code=val.id)
          td
            p.documentTitle(contentEditable="true")= val.name
          td
            p.documentOwnerId= val.Owner.username
          td
            p.documentLanguage= val.language
          td
            p.documentCreatedAt= moment(val.createdAt).format("MMM Do YYYY")
          td
            p.documentUpdatedAt= moment(val.updatedAt).format("MMM Do YYYY [at] h:mm:ss a")
          td
              button.viewDoc(data-live-code=val.id)= "LiveCode"
          
  script(src="/javascripts/profile.js")

  
